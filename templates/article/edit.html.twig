{% extends 'layout.html.twig' %}

{% block title %}Créer un nouvel article{% endblock %}

{% block main %}
<h1>Créer un nouvel article</h1>
<form method="post">
    <div class="form-group">
        <label for="inputTitle">Titre</label>
        <input type="text" class="form-control" name="title" id="inputTitle" required autofocus />
    </div>
    <div class="form-group">
        <label for="selectCategory">Catégorie</label>
        <select class="form-control" name="category" id="selectCategory" required>
            {% for category in categories %}
                <option value={{ category.id }}>{{ category.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="inputCover">Image de couverture</label>
        <input type="text" class="form-control" name="cover" id="inputCover" required />
    </div>
    <div class="form-group">
        <label for="inputContent">Contenu</label>
        <textarea class="form-control" name="content" id="inputContent" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">
        Valider
    </button>
</form>
{% endblock %}
